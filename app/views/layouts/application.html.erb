<!DOCTYPE html>
<html>
  <head>
    <title>Coding Challenge</title>
    <%= csrf_meta_tags %>

    <meta name='robots' content='noindex,nofollow' />
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-light" style='background-color:#eceeef;'>
      <h3>Career Plug</h3>
      <div>
        <%= link_to 'Home', posts_path, class: 'btn btn-light' %>
        <%= link_to destroy_user_session_path, class: 'btn btn-light', method: :delete do %>
          <i class='fa fa-sign-out fa-fw'></i> Logout
        <% end %>
      </div>
    </nav>
    <div class="container p-2 mx-auto">
      <div class="row justify-content-md-center">
        <div class='col-md-7'>
          <% flash.each do |key, value| %>
            <div class="<%= flash_class(key) %>" role="alert">
              <%= value %>
            </div>
          <% end %>
          <%= yield %>
        </div>
      </div>
    </div>
  </body>
</html>
