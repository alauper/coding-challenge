<div id='<%= dom_id(comment) %>'>
  <%= comment.body %><br />
  <div class="float-right">
    <%= link_to 'Edit', edit_comment_path(comment), class: 'btn btn-outline-primary', remote: true %>
    <%= link_to 'Delete', comment_path(comment), method: :delete, class: 'btn btn-outline-danger', data: { confirm: 'Are you sure?' }, remote: true %>
  </div><br /><br /><hr />
</div>